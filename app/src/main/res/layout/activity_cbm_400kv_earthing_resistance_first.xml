<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:weightSum="100">
            <Button
               android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:text="LINE BUS GT"
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_LINE_BUS_GT"
                android:layout_margin="30dp"
                android:padding="50dp"
                />

            <Button
                android:id="@+id/CBM_400KV_EARTH_ST"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:layout_margin="30dp"
                android:padding="50dp"
                android:text="ST" />

            <Button
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_TOWER"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_margin="30dp"
                android:layout_weight="25"
                android:padding="50dp"
                android:text="TOWER" />

            <Button
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_OTHERS"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:text="OTHERS"
                android:layout_margin="30dp"
                android:padding="50dp"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>