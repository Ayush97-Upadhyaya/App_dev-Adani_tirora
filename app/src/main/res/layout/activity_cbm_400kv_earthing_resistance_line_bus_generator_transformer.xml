<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CBM_400KV_EARTH_RESISTANCE_RADIOGROUP">
            <TableRow android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:weightSum="100"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="100"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_height="match_parent"
                    android:text="CBM 400V EARTH RESISTANCE LINE AND BUS AND GENERATOR TRANSFORMER"
                    android:gravity="center"
                    />
            </TableRow>

            <TableRow android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:weightSum="100"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/CBM_400KV_EARTH_RESISTANCE_LINE_BUS_RADIO_BUTTON1"
                    android:layout_width="0dp"
                    android:layout_weight="33"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:gravity="center"
                    />

                <RadioButton
                    android:id="@+id/CBM_400KV_EARTH_RESISTANCE_LINE_BUS_RADIO_BUTTON2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:gravity="center"
                    android:text="2" />

                <RadioButton
                    android:id="@+id/CBM_400KV_EARTH_RESISTANCE_LINE_BUS_RADIO_BUTTON3"
                    android:layout_width="0dp"
                    android:layout_weight="33"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:gravity="center"

                    />



            </TableRow>
        </RadioGroup>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textView32"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="LINE" />
        </TableRow>
        <TableRow android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="55"
                android:layout_height="match_parent"
                android:text="Earth Pit Number"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="45"

                android:textColor="#000000"
                android:layout_height="match_parent"
                android:text="Earth Resistance (In Ohms)"
                android:textSize="20sp"
                android:gravity="center"/>
        </TableRow>

        <TableRow android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="55"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="LINE R Phase" />

            <EditText

                android:layout_width="0dp"
                android:layout_weight="45"
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_LINE_R_PHASE"
                android:layout_height="match_parent"
                android:hint="Resistance in ohms"
                android:inputType="numberDecimal"

                android:gravity="center"/>
        </TableRow>
        <TableRow android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="55"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="LINE Y Phase" />

            <EditText
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_LINE_Y_PHASE"
                android:layout_width="0dp"
                android:layout_weight="45"
                android:layout_height="match_parent"
                android:hint="Resistance in ohms"
                android:inputType="numberDecimal"

                android:gravity="center"/>
        </TableRow>
        <TableRow android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="55"
                android:gravity="center"
                android:textColor="#000000"

                android:textSize="18sp"
                android:text="LINE B Phase" />

            <EditText
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_LINE_B_PHASE"
                android:layout_width="0dp"
                android:layout_weight="45"
                android:layout_height="match_parent"
                android:hint="Resistance in ohms"
                android:inputType="numberDecimal"

                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center"
                android:textSize="18sp"
                android:text="BUS REACTOR"
                android:textColor="#000000"/>

        </TableRow>
        <TableRow android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="55"
                android:textSize="18sp"
                android:layout_height="match_parent"
                android:text="BUS REACTOR R Phase"
                android:gravity="center"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_BUS_REACTOR_R_PHASE"
                android:layout_width="0dp"
                android:layout_weight="45"
                android:layout_height="match_parent"
                android:hint="Resistance in ohms"
                android:inputType="numberDecimal"

                android:gravity="center"/>
        </TableRow>
        <TableRow android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="55"
                android:layout_height="match_parent"
                android:text="BUS REACTOR Y Phase"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#000000"
                />
            <EditText
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_BUS_REACTOR_Y_PHASE"
                android:layout_width="0dp"
                android:layout_weight="45"
                android:layout_height="match_parent"
                android:hint="Resistance in ohms"
                android:inputType="numberDecimal"

                android:gravity="center"/>
        </TableRow>
        <TableRow android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="55"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#000000"
                android:text="BUS REACTOR B Phase" />

            <EditText
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_BUS_REACTOR_B_PHASE"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"

                android:layout_weight="45"
                android:gravity="center"
                android:hint="Resistance in ohms" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:orientation="horizontal"
            android:textColor="#000000"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="100"
                android:layout_height="match_parent"
                android:text="GENERATOR TRANSFORMER"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#000000"
                />

        </TableRow>
        <TableRow android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="55"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_height="match_parent"
                android:text="GENERATOR TRANSFORMER R Phase"
                android:gravity="center"

                />

            <EditText
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_GENERATOR_TRANSFORMER_R_PHASE"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="45"
                android:inputType="numberDecimal"

                android:gravity="center"
                android:hint="Resistance in ohms" />
        </TableRow>
        <TableRow android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="55"
                android:layout_height="match_parent"
                android:text="GENERATOR TRANSFORMER Y Phase"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_GENERATOR_TRANSFORMER_Y_PHASE"
                android:layout_width="0dp"
                android:layout_weight="45"
                android:layout_height="match_parent"
                android:hint="Resistance in ohms"
                android:inputType="numberDecimal"

                android:gravity="center"/>
        </TableRow>
        <TableRow android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="55"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000000"
                android:text="GENERATOR TRANSFORMER B Phase" />

            <EditText
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_GENERATOR_TRANSFORMER_B_PHASE"
                android:layout_width="0dp"
                android:layout_weight="45"
                android:layout_height="match_parent"
                android:hint="Resistance in ohms"
                android:inputType="numberDecimal"

                android:gravity="center"/>
        </TableRow>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/DM_400KV_ST_REMARKS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:gravity="center"
                android:text="REMARKS IF ANY"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_REMARKS_IF_ANY"
                android:layout_weight="45"


                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/te3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:gravity="center"
                android:text="VERIFIED BY "
                android:textSize="18sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_VERIFIED_BY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="45" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_edit_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:text="Edit"
                android:visibility="gone"
                android:gravity="center"
                />

            <Button
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_confirm_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:text="Confirm"
                android:visibility="gone"
                android:layout_weight="50"
                />

            <Button
                android:id="@+id/CBM_400KV_EARTH_RESISTANCE_submit_btn"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Submit"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>